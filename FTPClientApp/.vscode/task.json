{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Gradle Clean Build",
            "type": "shell",
            "command": "./gradlew",
            "args": [
                "clean",
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$javac"],
            "windows": {
                "command": ".\\gradlew.bat"
            }
        }
    ]
}
